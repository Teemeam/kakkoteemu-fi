---
import '@fontsource-variable/montserrat';
import '@fontsource-variable/playfair-display';
import '~/styles.css';

/* Components */
import BaseHead from '~/components/BaseHead.astro';

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <BaseHead title={title} />
  </head>
  <body class='bg-neutral-200'>
    <slot />
  </body>
</html>
